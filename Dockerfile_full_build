# COPY ros/catkin_ws/src /ros/catkin_ws/src
# RUN cd /ros/catkin_ws && /ros_entrypoint.sh catkin build

# Add /catkin_ws to the ROS environment.
COPY ros/ros_entrypoint.sh /ros_entrypoint.sh
